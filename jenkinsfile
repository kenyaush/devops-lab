pipeline {
    agent any

    stages {
        stage('Pull Code') {
            steps {
                git branch: 'main', url: 'https://github.com/<your-username>/devops-lab.git'
            }
        }

        stage('Build') {
            steps {
                echo 'Building the application...'
            }
        }

        stage('Test') {
            steps {
                echo 'Running tests...'
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying to Windows folder...'
                bat 'copy index.html "C:\\Users\\usher\\Desktop\\Junk\\Tech Materials\\Python Projects\\devops_lab\\" /Y'
            }
        }
    }
}

